@page
@model Webpage.Pages.Profile.SecondProfileModel
@{
    ViewData["Title"] = "Your Profile";
}

<head>
    <link rel="stylesheet" href="~/css/profile.css" />
</head>


<h5>Welcome to the profile page - please fill in all the information</h5>
<br />
<br />
<br />




<form method="post">

    <h4>Personal details</h4>
    <br />
    <h5>Full Name:</h5>
    <input type="text" name="fullName" placeholder="Enter full name here...">
    <h5>Age:</h5>
    <input type="number" name="age" />
    <h5>Mobile</h5>
    <input type="text" name="mobile" />
    <br />
    <br />
    <br />
    <br />
    <h4>Location:</h4>
    <br />

    <h5>Area Code:</h5>
    <input type="text" name="location" />
    <h5>Country:</h5>
    <input type="text" name="country" />
    <h5>Location Caption:</h5>
    <input type="text" name="locationCaption" />
    <h5>Location Description:</h5>
    <input type="text" name="locationDescription" />
    <h5>Location State:</h5>
    <input type="text" name="locationState" />



    <div>
        <button type="submit">
            <span>Create account</span>
        </button>
    </div>
</form>

