@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-page="/Account/Logout" class="login-status">
        <span>Welcome, @User.Identity.Name!</span>
        <button type="submit" class="regular-btn">Logout</button>
    </form>
}
else
{
    <a class="regular-btn" asp-page="/Account/Login">Login</a>
}