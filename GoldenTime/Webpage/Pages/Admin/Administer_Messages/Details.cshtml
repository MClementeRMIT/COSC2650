@page
@model Webpage.Pages.Admin.Administer_Messages.DetailsModel

@{
    ViewData["Title"] = "Message Details";
}

<h1>Message Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Recipient Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.ReceiverIdxNavigation.Email)
        </dd>
        <dt class="col-sm-2">
            Sender Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.SenderIdxNavigation.Email)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Edited On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.ModifiedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Messages.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.Subject)
        </dd>
        <dt class="col-sm-2">
            Message
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.Content)
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Messages.Idx">Edit</a> |
    <a asp-page="./Index">Back to Messages Sent</a>
</div>
