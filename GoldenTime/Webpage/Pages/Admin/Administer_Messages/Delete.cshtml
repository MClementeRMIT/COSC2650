@page
@model Webpage.Pages.Admin.Administer_Messages.DeleteModel

@{
    ViewData["Title"] = "Delete Message";
}

<head>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>

<h1>Delete Message</h1>

<h3>Are you sure you want to delete this message?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Recipient Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.ReceiverIdxNavigation.Email)
        </dd>
        <dt class="col-sm-2">
            Sender Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.SenderIdxNavigation.Email)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Edited On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.ModifiedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Messages.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.Subject)
        </dd>
        <dt class="col-sm-2">
            Message
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messages.Content)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Messages.Idx" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Messages Sent</a>
    </form>
</div>
<br />