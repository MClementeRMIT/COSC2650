@page
@model Webpage.Pages.Admin.Administer_Messages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].ParentIdxNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].ReceiverIdxNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].SenderIdxNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Messages) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentIdxNavigation.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverIdxNavigation.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderIdxNavigation.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Idx">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Idx">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Idx">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
