@page
@model Webpage.Pages.Admin.Administer_Posts.DeleteModel

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete Post</h1>

<h3>Are you sure you want to delete this post?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.Content)
        </dd>
        <dt class="col-sm-2">
            Poster Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.UserIdxNavigation.Email)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.StartingOn)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.EndingOn)
        </dd>
        <dt class="col-sm-2">
            Area Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.LocationIdxNavigation.AreaCode)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Edited On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.ModifiedOn)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Posts.Idx" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Posts Created</a>
    </form>
</div>
