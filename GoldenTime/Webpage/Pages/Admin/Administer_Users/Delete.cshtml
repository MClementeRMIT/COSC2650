@page
@model Webpage.Pages.Admin.Administer_Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Age)
        </dd>
        <dt class="col-sm-2">
            Area Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.LocationIdxNavigation.AreaCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Mobile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Mobile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Email)
        </dd>
        <dt class="col-sm-2">
            Admin Permissions
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.IsAdmin)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Users.Idx" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Users Created</a>
    </form>
</div>
<br />