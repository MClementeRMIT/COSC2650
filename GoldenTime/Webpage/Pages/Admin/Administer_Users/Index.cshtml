<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Mobile)
