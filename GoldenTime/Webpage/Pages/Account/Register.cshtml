@page
@model Webpage.Pages.Account.Register.CreateModel

@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="login-container">
    <h1>Register</h1>

    <form class="login-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Users.FullName">Full Name</label>
        <input asp-for="Users.FullName" class="form-control login-field" placeholder="Enter full name here..." />
        <span asp-validation-for="Users.FullName" class="text-danger"></span>
        <br />

        <label asp-for="Users.Age">Age</label>
        <input asp-for="Users.Age" class="form-control login-field" placeholder="Enter age here..." />
        <span asp-validation-for="Users.Age" class="text-danger"></span>
        <br />

        <label asp-for="Locations.AreaCode">Area Code</label>
        <input asp-for="Locations.AreaCode" class="form-control login-field" placeholder="Enter area code here..." />
        <span asp-validation-for="Locations.AreaCode" class="text-danger"></span>
        <br />

        <label asp-for="Users.Mobile">Mobile</label>
        <input asp-for="Users.Mobile" class="form-control login-field" placeholder="Enter mobile number here..." />
        <span asp-validation-for="Users.Mobile" class="text-danger"></span>
        <br />

        <label asp-for="Users.Email">Email</label>
        <input asp-for="Users.Email" class="form-control login-field" placeholder="Enter email here..." />
        <span asp-validation-for="Users.Email" class="text-danger"></span>
        <br />

        <label asp-for="Users.Password">Password</label>
        <input asp-for="Users.Password" class="form-control login-field" placeholder="Enter password here..." />
        <span asp-validation-for="Users.Password" class="text-danger"></span>

        <div class="form-group row">
            <div class="col-1">
                <button type="submit" class="animated-btn">
                    <span>Register</span>
                </button>
            </div>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="Users.IsAdmin" value=0 class="form-control" />
            <span asp-validation-for="Users.IsAdmin" class="text-danger"></span>
        </div>
    </form>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}