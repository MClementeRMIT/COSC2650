@page
@model Webpage.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="login-container">
    <h1>Login</h1>

    <form class="login-form" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <label asp-for="Credential.UserName"></label>
        <input type="text" asp-for="Credential.UserName" class="form-control login-field" />
        <span class="text-danger" asp-validation-for="Credential.UserName"></span>
        <br />

        <label asp-for="Credential.Password"></label>
        <input type="password" asp-for="Credential.Password" class="form-control login-field" />
        <span class="text-danger" asp-validation-for="Credential.Password"></span>

        <div class="form-group row">
            <div class=" = " col-1">
                <button type="submit" class="animated-button">
                    <span>Login</span>
                </button>
            </div>
        </div>
    </form>
</div>